#!/bin/bash
#

__dir="$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
__evaluate="false"
__debug=""
__suspend=",suspend=n"

while [ "$1" != "" ]; do
  case "${1}" in
    "--evaluate")
      shift
      __evaluate="${1}"
      ;;
    "--suspend")
      __suspend=",suspend=y"
      ;;
    "--debug")
      __debug="-Xdebug -Xrunjdwp:transport=dt_socket,server=y,address=8000"
      ;;
    *)
      echo "ERROR: unknown parameter: $1"
      exit 1
      ;;
  esac
  shift
done

if [ ! -z "${__debug}" ]; then
  export JAVA_OPTS="\
-Dtest.application.evaluate=${__evaluate} \
${__debug}${__suspend}
"
else
  export JAVA_OPTS="\
-Dtest.application.evaluate=${__evaluate}
"
fi


${__dir}/bin/test-application